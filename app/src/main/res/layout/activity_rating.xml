<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".RatingActivity"

    android:background="#F3F2F2">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ratingIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="156dp"
            android:src="@drawable/icon_person_large" />

        <TextView
            android:id="@+id/ratingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thumbUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingName"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/rate_up"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/ratingName"
            android:layout_marginStart="240dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_rate_up" />

        <TextView
            android:id="@+id/thumbDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbUp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/rate_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/rate_up"
            android:layout_marginStart="240dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_rate_down" />


        <TextView
            android:id="@+id/tvDriverHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="75dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rate_down"
            android:layout_marginEnd="75dp"
            android:text="@string/driver_hint"
            android:textColor="@color/gray" />


    </RelativeLayout>

</LinearLayout>