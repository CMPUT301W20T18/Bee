<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:color="#f2f5df"
    android:width="1dp"
    android:bottom="0.1dp"
    android:left="0.5dp"
    android:right="0.5dp"
    android:top="0dp"

    android:orientation="horizontal" >

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="#e4ecbf"
        android:text="start"
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/start"
        android:layout_toRightOf="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text=""
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/end_text"
        android:layout_below="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="#ccebed"
        android:text="destination"
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/end"
        android:layout_toRightOf="@+id/end_text"
        android:layout_alignBaseline="@+id/end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="end"
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/price"
        android:layout_alignBaseline="@+id/start_text"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="$"
        android:textSize="15sp">

    </TextView>


</RelativeLayout>