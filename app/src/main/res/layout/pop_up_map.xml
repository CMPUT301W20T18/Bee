<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:id="@+id/pop_up_layout"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/dialog_box"


    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rider_card"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:elevation="20dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/rider_profile"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rider_name"
            android:textStyle="bold"
            android:layout_width="140dp"
            android:layout_height="62dp"
            android:layout_gravity="top"
            android:layout_marginTop="-7dp"
            android:hint="riderId"
            android:text="riderID"

            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/money_amount_in_pop"
            android:layout_width="140dp"
            android:layout_height="62dp"
            android:hint="AmountOfMoney"
            android:layout_marginTop="-7dp"

            android:text="$amount"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <fragment
        android:id="@+id/map_pop"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
<!--        android:layout_marginBottom="78dp"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#fff"

        android:orientation="horizontal">

        <Button
            android:id="@+id/accept_button"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="197dp"
            android:layout_marginBottom="0dp"
            android:background="#fff"
            android:text="Accept"
            android:textColor="#000" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="200dp"

            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="131dp"
            android:layout_marginEnd="62dp"
            android:layout_weight="1"
            android:background="#fff"
            android:text="Cancel"
            android:textColor="#000" />
        <!--            android:layout_marginStart="216dp"-->

    </RelativeLayout>


</LinearLayout>

