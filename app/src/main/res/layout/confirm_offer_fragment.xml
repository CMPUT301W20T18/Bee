<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_box"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/driver_profile1"/>

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your request is accepted by"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:layout_toRightOf="@+id/driver_profile1"
            android:layout_marginLeft="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_text"
            android:layout_toRightOf="@+id/driver_profile1"
            android:layout_marginLeft="25dp"
            android:text="Driver Name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/driver_name1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/driver_name1"
            android:layout_below="@+id/driver_name1"
            android:text="7801234566"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:id="@+id/phone_number"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate_up_img"
            android:src = "@drawable/ic_rate_up"
            android:layout_alignLeft="@+id/driver_name1"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/phone_number"/>

        <TextView
            android:id="@+id/rate_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rate_up_img"
            android:layout_below="@id/phone_number"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/rate_down_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_rate_down"
            android:layout_below="@id/phone_number"
            android:layout_toRightOf="@+id/rate_up_img"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/rate_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rate_down_img"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/rate_up"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black" />

    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingBottom="16dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id="@+id/cancel_btn" />

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_btn"
            android:textColor="#1d8f2e"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="16dp"
            android:text="Start"
            android:background="@android:color/transparent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>