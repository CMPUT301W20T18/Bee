<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rider_card"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/rounded_corner"

        android:elevation="20dp"
        android:padding="16dp"

        app:layout_constraintBottom_toBottomOf="@+id/map_requestAccepted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/rider_profile"
            android:layout_width="107dp"
            android:layout_height="125dp"
            android:layout_alignEnd="@+id/textView"

            android:layout_gravity="center"
            android:layout_marginEnd="178dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/request_money_amount2"
            android:layout_width="112dp"
            android:layout_height="52dp"
            android:layout_alignStart="@+id/rider_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="97dp"
            android:hint="$Money"

            android:text="$299.00"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/rider_name"
            android:layout_width="wrap_content"

            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="87dp"
            android:text="RiderName"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_status"
            android:layout_width="243dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="0dp"
            android:hint="request status"
            android:textColor="#000"
            android:textSize="19dp"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="300dp" />

    </RelativeLayout>

    <fragment
        android:id="@+id/map_requestAccepted"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="FINISH"
        android:textSize="20dp"
        android:background="#fff"
        android:textColor="#000"

        app:layout_constraintBottom_toBottomOf="@+id/map_requestAccepted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rider_card"
        app:layout_constraintVertical_bias="0.914" />


</androidx.constraintlayout.widget.ConstraintLayout>