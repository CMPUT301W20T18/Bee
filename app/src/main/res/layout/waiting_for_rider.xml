<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/map_requestAccepted"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:id="@+id/textView"

            android:layout_width="242dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/request_money_amount2"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="281dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="85dp"
            android:text="$Money"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rider_profile"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"

            android:layout_gravity="center"
            android:layout_marginEnd="178dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rider_name"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="138dp"
            android:text="RiderName"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/request_status"
            android:text="request_info"
            android:layout_width="159dp"
            android:layout_height="29dp"
            android:textColor="#000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"

            android:layout_marginEnd="97dp"
            android:layout_marginBottom="652dp" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="152dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="151dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="151dp"
            android:layout_marginBottom="25dp"
            android:layout_centerInParent="true"

            android:text="FINISH"
            android:textSize="29dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>