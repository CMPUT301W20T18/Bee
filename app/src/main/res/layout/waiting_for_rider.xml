<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rider_card"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="100dp"
        android:background="#fff"
        android:elevation="20dp"
        android:padding="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-5dp">


        <ImageView
            android:id="@+id/rider_profile"
            android:layout_width="107dp"
            android:layout_height="125dp"
            android:layout_alignEnd="@+id/textView"

            android:layout_gravity="center"
            android:layout_marginEnd="178dp"
            android:src="@mipmap/ic_launcher" />


        <EditText
            android:id="@+id/request_money_amount2"
            android:layout_width="91dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="279dp"
            android:layout_marginBottom="96dp"
            android:text="$Money"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/rider_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="86dp"
            android:text="RiderName"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/request_status"
            android:layout_width="232dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="enter request status"
            android:textColor="#000"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="300dp" />

    </RelativeLayout>

    <fragment
        android:id="@+id/map_requestAccepted"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="FINISH"
        android:textSize="20dp"
        android:background="#fff"
        android:textColor="#000"

        app:layout_constraintBottom_toBottomOf="@+id/map_requestAccepted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rider_card"
        app:layout_constraintVertical_bias="0.914" />


</androidx.constraintlayout.widget.ConstraintLayout>